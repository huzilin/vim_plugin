use mysql;
set password='dbscale';
delete from user where user not in ('root', 'mysql.sys', 'mysqlxsys');

flush privileges;

create user dbscale@'127.%' identified by 'dbscale';
grant all on *.* to dbscale@'127.%' with grant option;

create user dbscale@'localhost' identified by 'dbscale';
grant all on *.* to dbscale@'localhost';

create user dbscale_rw@'localhost' identified by 'dbscale';
grant SELECT,INSERT,UPDATE,DELETE,CREATE,DROP,INDEX,ALTER, SHOW DATABASES,CREATE TEMPORARY TABLES,LOCK TABLES, EXECUTE on *.* to dbscale_rw@'localhost';

create user dbscale_rw@'127.%' identified by 'dbscale';
grant SELECT,INSERT,UPDATE,DELETE,CREATE,DROP,INDEX,ALTER, SHOW DATABASES,CREATE TEMPORARY TABLES,LOCK TABLES, EXECUTE on *.* to dbscale_rw@'127.%';
     
create user dbscale_ro@'127.%' identified by 'dbscale';
create user dbscale_ro@'localhost' identified by 'dbscale';
create user rdbscale@'127.%' identified by 'rdbscale';
grant SELECT,EXECUTE on *.* to dbscale_ro@'127.%';
grant SELECT,EXECUTE on *.* to dbscale_ro@'localhost';
grant REPLICATION SLAVE on *.* to rdbscale@'127.%';
create schema if not exists test;
