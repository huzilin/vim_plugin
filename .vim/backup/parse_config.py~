import os

from tornado.options import define

dirname = os.path.dirname
base_dir = os.path.abspath(dirname(dirname(__file__)))

define("base_dir", default=base_dir, help="project base dir")
define('port', default = 12345, type = int, help = 'app listen port')
define('servers', default = ['192.168.198.129','192.168.1.22'], type = int, help = 'server cluster')


define('mysql_host', default = '127.0.0.1', type = int, help = 'mysql host')
define('mysql_port', default = 3306, type = int, help = 'mysql server listen port')
define('mysql_user', default = 'backup', type = int, help = 'mysql user')
define('mysql_passwd', default = '123', type = int, help = 'mysql passwd')
define('mysql_db', default = 'backup', type = int, help = 'mysql database')
define('mysql_table', default = 'server_info', type = int, help = 'mysql info')
