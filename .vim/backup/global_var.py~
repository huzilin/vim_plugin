class GlobalVar:

    database = None
    table = None
    column_info = None

    def set_database(database):
        GlobalVar.database = database

    def set_table(table):
        GlobalVar.table = table

    def set_column_info(column_info):
        GlobalVar.column_info = column_info

    def get_database():
        return GlobalVar.database

    def get_table():
        return GlobalVar.table

    def get_column_info():
        return GlobalVar.column_info
