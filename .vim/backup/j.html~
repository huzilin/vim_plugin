<!DOCTYPE html>
<html>
<body>

<button onclick="get_info()">click</button>

<script>
function get_info()
{
    var fso = new ActiveXObject("Scripting.FileSystemObject");
    var f1 = fso.GetFile("/tmp/myjstest.txt","true");
    alert("File last modified: " + f1.DateLastModified);
    f1.close();
}
</script>

</body>
</html>
