package MySQLInstallReplication

import (
	"flag"
	"fmt"
	"os"
	"os/user"
)

var (
	installPath string
	mysql       string
)

func init_options() {
	curUser, _ := user.Current()

	flag.StringVar(&installPath, "installpath", "/", "Install path")
	flag.StringVar(&mysql, "mysql", "/mysql", "mysql")
}

func main() {
	init_options()
	flag.Parse()
	args := flag.Args()
	if len(args) != 0 {
		flag.Usage()
		os.Exit(1)
	}
	fmt.Printf("%v\n", installPath)
	fmt.Printf("%v\n", mysql)
}
